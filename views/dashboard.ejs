  </a>

  <a href="/events" class="action-card events-card">
    <div class="image-wrapper">
      <img src="/images/eventspicture.avif" alt="Events" class="events-image">
    </div>
    <div class="action-overlay-light">
      <h3>Events</h3>
      <% if (user.role && user.role.toLowerCase().startsWith('a')) { %>
        <p>Manage and view all upcoming and past events</p>
        <span class="action-badge manager">Manage & View</span>
      <% } else { %>
        <p>View your registered or recommended events</p>
        <span class="action-badge view">View Only</span>
      <% } %>
    </div>
  </a>

  <a href="/milestones" class="action-card milestones-card">
    <div class="image-wrapper">
      <img src="/images/milestonespicture.avif" alt="Milestones" class="milestone-image">
    </div>
    <div class="action-overlay-light">
      <h3>Milestones</h3>
      <% if (user.role && user.role.toLowerCase().startsWith('a')) { %>
        <p>Manage and assign participant milestones</p>
        <span class="action-badge manager">Manage & View</span>
      <% } else { %>
        <p>View your achieved milestones</p>
        <span class="action-badge view">View Only</span>
      <% } %>
    </div>
  </a>

  <a href="/surveys" class="action-card surveys-card">
    <div class="image-wrapper">
      <img src="/images/surveypicture.avif" alt="Surveys" class="survey-image">
    </div>
    <div class="action-overlay-light">
      <h3>Surveys</h3>
      <% if (user.role && user.role.toLowerCase().startsWith('a')) { %>
        <p>Take a look at participant surveys</p>
        <span class="action-badge manager">Manage & View</span>
      <% } else { %>
        <p>Take a look at participant surveys</p>
        <span class="action-badge view">View Only</span>
      <% } %>
    </div>
  </a>
</div>

<a href="/donation_list" class="action-card donations-card">
  <div class="image-wrapper">
    <img src="/images/donationspicture.avif" alt="Donations" class="donations-image">
  </div>
  <div class="action-overlay-light">
    <h3>Donations</h3>
    <% if (user.role && user.role.toLowerCase().startsWith('a')) { %>
      <p>Track and manage all donor contributions</p>
      <span class="action-badge manager">Manage & View</span>
    <% } else { %>
      <p>View your donation history and totals</p>
      <span class="action-badge view">View Only</span>
    <% } %>
  </div>
</a>


